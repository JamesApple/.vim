{
  "diagnostic.enable": true,
  "solargraph.hover": true,
  "solargraph.rename": true,
  "solargraph.definitions": true,
  "solargraph.formatting": true,

  "snippets.ultisnips.usePythonx": true,
  "snippets.autoTrigger": true,
  "snippets.triggerCharacters": [".", "::"],
  "snippets.ultisnips.directories": [
    "~/.vim/UltiSnips"
  ],


  "yaml.trace.server": "verbose",
  "yaml.format.enable": true,
  "yaml.format.bracketSpacing": true,
  "yaml.hover": true,
  "yaml.validate": true,
  "yaml.completion": true,
  "yaml.format.singleQuote": true,
  "yaml.schemas": {
    "http://json.schemastore.org/ansible-stable-2.5": "ansibl*/**/*.y*l",
    "kubernetes": ["kub*.y*l", "kub*/**/*.y*ml", "kub*/*.y*ml"],
    "http://json.schemastore.org/package": "package.json"
  },

  "typescript.suggest.paths": true,
  "typescript.showUnused": true,
  "typescript.validate.enable": true,
  "typescript.suggest.autoImports": true,
  "typescript.implementationsCodeLens.enable": true,
  "typescript.suggestionActions.enabled": true,
  "typescript.suggest.enabled": true,

  "languageserver":  {

    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"]
    },

    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },

    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  }
}
